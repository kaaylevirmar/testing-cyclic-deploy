<% layout('/layouts/boilerplate') %>
<% const activePage = '/leave-management' %>
<div>
    <h3 class="my-3 page-header mt-4 ms-3">Leave Request Form</h3>
</div>

<form action="/leave-management/<%= leave._id %>?_method=PATCH" method="POST" novalidate class="validated-form">
    <div class="w-50 mx-2 border rounded-3 shadow" style="font-size: 0.8em;">
        <div class="mx-3">
            <h4 class="text-success my-2">Leave Information</h4>
        </div>
        <div class="w-80 m-3">
            <label for="employeeId" class="form-label">Employee ID: </label>
            <input type="text" name="leave[employeeId]" id="employeeId" class="form-control" value="<%= leave.employeeId %>">
            
            <label for="firstName" class="form-label mt-2">First Name: </label>
            <input type="text" name="leave[firstName]" id="firstName" class="form-control" value="<%= leave.firstName %>" >
            
            <label for="lastName" class="form-label mt-2">Last Name: </label>
            <input type="text" name="leave[lastName]" id="lastName" class="form-control" value="<%= leave.lastName %>" >
            
            <div class="d-flex align-items-center mt-3">
                <div class="me-2">
                    <label for="leaveStart" class="form-label">Start: </label>
                <input type="date" name="leave[leaveStart]" id="leaveStart" class="form-control" value="<%= leave.leaveStart %>">
                </div>
                <div class="me-2">
                    <label for="leaveEnd" class="form-label">End: </label>
                    <input type="date" name="leave[leaveEnd]" id="leaveEnd" class="form-control" value="<%= leave.leaveEnd %>">
                </div>
                <div>
                    <label for="leaveType" class="form-label">Leave Type: </label>
                    <select name="leave[leaveType]" id="leave[leaveType]" class="form-control" class="align-middle w-100">
                        <% for (let leaveType of leaveTypes) { %>
                            <option value="<%= leaveType %>" <%= leave.leaveType === leaveType ? 'selected' : '' %>><%= leaveType %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="my-3">
                <label for="firstName" class="form-label ">Notes / Remarks: </label>
                <textarea cols="50" rows="5" name="leave[remarks]" id="firstName" class="form-control" style="resize:none"><%= leave.remarks %></textarea>
            </div>
            <div class="my-3 d-flex justify-content-center">
                <button class="btn btn-success mx-3 w-30">
                    Submit
                </button>
                <a href="/leave-management" class="btn btn-danger">Back</a>
            </div>
        </div>
    </div>
</form>
