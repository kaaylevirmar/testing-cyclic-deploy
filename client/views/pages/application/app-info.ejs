<% layout('/layouts/boilerplate') %>

<div class="my-1">
    <h3 class="page-header mt-4 ms-3">Applicant Information</h3>
</div>
<div class="d-flex justify-content-end top-0 end-0 pt-1 me-3">
    <a href="/applications" class="btn backbtn mx-1 ps-3 pe-3"><i class="bi bi-arrow-90deg-left me-2"></i>Back</a>
</div>

