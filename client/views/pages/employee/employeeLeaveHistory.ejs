<% layout('/layouts/boilerplate') %>

<div class="my-3">
    <h3 class="page-header mt-4 ms-3">Employee Leave History</h3>
</div>
<div class="position-absolute top-0 end-0 mt-3 me-3">
    <a href="/employees/<%= employee._id %>" class="btn backbtn mx-1 ps-3 pe-3"><i class="bi bi-arrow-90deg-left me-2"></i>Back</a>
    <div id="printButton"><button class="btn btn-light mt-2 ms-5" data-bs-toggle="tooltip" data-bs-html="true" data-placement="top" title="Print Table"><i class="bi bi-printer"></i></button>
    </div>
</div>
<div class="m-3 card shadow overflow-auto mt-5" style="height: 80vmin">
        <div class="p-3">
            <h5 class="text-center ">Leave History</h5>
            <table class="col-12 text-center" id="employeeTable">
                <thead>
                    <tr class="">
                        <th>Employee ID</th>
                        <th>Employee Name</th>
                        <th >Leave Start</th>
                        <th >Leave End</th>
                        <th >Leave Type</th>
                        <th >Remarks</th>
                    </tr>
                </thead>
                <tbody>
                        <% for(leaves of employee.leaves) { %>
                        <tr class="">
                            <td><%= employee.employeeId %></td>
                            <td><%= employee.firstName %> <%= employee.lastName %></td>
                            <td><%= leaves.leaveStart %></td>
                            <td><%= leaves.leaveEnd %></td>
                            <td><%= leaves.leaveType %></td>
                            <td><%=  leaves.remarks%></td>
                        </tr>
                    </tbody>
                <% } %>
                </table>
        </div>
</div>